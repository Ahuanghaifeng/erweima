<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qgary" >
    
    <LinearLayout 
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
        
     <TextView 
        android:textSize="60sp"
        android:text="报到成功，祝您学习愉快！"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
     
     <TextView 
        android:id="@+id/hintone"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/red"
        android:textSize="40sp"
        android:text="温馨提示：请尽快关注川庆培训中心的微信公众号，并完善个人信息，以免错过重要通知。"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
     
     <TextView
         android:id="@+id/hinttwo"
         android:textColor="@color/red"
         android:text="微信公众号：中国石油川庆培训中心"
         android:layout_gravity="center" 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="40sp"/>
        
    </LinearLayout>
    
    <TextView
        android:textColor="#FFFFFF"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="150dp"
        android:paddingRight="150dp"
        android:background="@drawable/base_button_bg"
        android:id="@+id/back"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textSize="30sp"
        android:text="返回主页"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
</TextView>

</RelativeLayout>
