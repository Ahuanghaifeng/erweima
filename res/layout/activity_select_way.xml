<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qgary">

    <TextView
        android:visibility="gone"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="请选择报到方式"
        android:textSize="45sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout 
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            
         <Button
            android:textColor="#FFFFFF"
            android:background="@drawable/base_button_bg"
            android:id="@+id/sfcard"
            android:layout_width="450dp"
            android:layout_height="wrap_content"        
            android:gravity="center"
            android:padding="20dp"
            android:text="身份证报到（推荐）"
            android:textSize="45sp"
            android:textStyle="bold" />
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="注：请关注学校微信公众号绑定身份，便于接收通知"
            android:textColor="@color/red"
            android:textSize="30sp" />

        <Button
            android:layout_marginTop="80dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/base_button_bg"
            android:id="@+id/erweima"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="微信报到"
            android:textSize="45sp"
            android:textStyle="bold" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="注：此方式更加快捷方便"
            android:textColor="@color/red"
            android:textSize="30sp" />
            
        </LinearLayout>
        
        <ImageView
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="40dp"
            android:layout_alignParentBottom="true"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_gravity="center"
                android:src="@drawable/wx_one" >
            </ImageView>
        
    </RelativeLayout>

    <include layout="@layout/back" />

</RelativeLayout>